# Server Configuration
PORT=3000
NODE_ENV=production

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key-here

# Google Cloud Configuration
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./credentials/google-service-account.json
GOOGLE_DRIVE_FOLDER_ID=your-main-folder-id

# Database Configuration (Optional - for production)
DATABASE_URL=postgresql://user:password@localhost:5432/haba_docs
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_VERSIONING=true
ENABLE_GOOGLE_DOCS=true
ENABLE_CLAUDE_AI=true
MAX_DOCUMENT_VERSIONS=50

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Document Generation Limits
MAX_DOCUMENT_SIZE_MB=10
MAX_TOKENS_PER_REQUEST=4000
CLAUDE_MODEL=claude-3-opus-20240229

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info